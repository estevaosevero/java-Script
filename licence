x = int(input("Digite sua nota na diciplina de linguagens, que esteja entre 0 a 1000:"))
y = int(input("Digite sua nota na diciplina de códigos, que esteja entre 0 a 1000:"))
w = int(input("Digite sua nota na diciplina de ciências humanas, que esteja entre 0 a 1000:"))
z = int(input("Digite sua nota na diciplina de matématica, que esteja entre 0 a 1000:"))
u = int(input("Digite sua nota na diciplina de ciências da natureza, que esteja entre 0 a 1000:"))
v = int(input("Digite sua nota de redação, que esteja entre 0 a 1000:"))

while x < 0 or x > 1000 or y < 0 or y > 1000 or w < 0 or w > 1000 or z < 0 or z > 1000 or u < 0 or u > 1000 or v < 0 or v > 1000:
    print("Nota inválida ou notas inválidas foram digitadas, por favor, digite novamente")
    x = int(input("Digite sua nota na disciplina de linguagens, que esteja entre 0 a 1000: "))
    y = int(input("Digite sua nota na disciplina de códigos, que esteja entre 0 a 1000: "))
    w = int(input("Digite sua nota na disciplina de ciências humanas, que esteja entre 0 a 1000: "))
    z = int(input("Digite sua nota na disciplina de matemática, que esteja entre 0 a 1000: "))
    u = int(input("Digite sua nota na disciplina de ciências da natureza, que esteja entre 0 a 1000: "))
    v = int(input("Digite sua nota de redação, que esteja entre 0 a 1000: "))

media = (x + y + w + z + u) / 5
print("Sua média nas notas é:", media)

if media >= 450 and v > 0:
    print("Parabéns, você atingiu pontuações maiores ou iguais a 450 em média na matérias e também na redação, então poderá participar do FIES e do ProUni")
elif media >= 450 and v == 0:
    print(" Conseguiu pontuação maior ou igual a 450 em média nas matérias, mas em redação tirou 0, então está reprovado")
else:
    print("Você não conseguiu atingir o mínimo exigido de média(450), então está reprovado")
    
    




    
